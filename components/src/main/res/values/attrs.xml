<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="stepsCount" format="integer"/>
    <attr name="stepBackgroundCompleted" format="reference"/>
    <attr name="stepBackgroundIdle" format="reference"/>
    <attr name="stepIcon" format="reference"/>
    <attr name="stepSize" format="dimension"/>

    <declare-styleable name="AsociateStepsProgress">
        <attr name="stepsCount"/>
        <attr name="stepBackgroundCompleted"/>
        <attr name="stepBackgroundIdle"/>
        <attr name="stepIcon"/>
        <attr name="stepSize"/>
        <attr name="roadIdleColor" format="color"/>
        <attr name="roadProgressColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="AsociateStepsIndicator">
        <attr name="stepsCount"/>
        <attr name="stepBackgroundCompleted"/>
        <attr name="stepBackgroundIdle"/>
        <attr name="stepIcon"/>
        <attr name="stepSize"/>
    </declare-styleable>

    <declare-styleable name="AsociateBulletText">
        <attr name="bulletSize" format="dimension"/>
        <attr name="bulletColor" format="color"/>
        <attr name="bulletTextSize" format="dimension"/>
        <attr name="bulletTextColor" format="color"/>
        <attr name="bulletText" format="string"/>
    </declare-styleable>

    <declare-styleable name="AsociateMessage">
        <attr name="message" format="string"/>
        <attr name="messageColor" format="color"/>
        <attr name="messageSize" format="dimension"/>
        <attr name="icon" format="reference"/>
        <attr name="messageType" format="enum">
            <enum name="flat" value="0"/>
            <enum name="elevated" value="1"/>
        </attr>
    </declare-styleable>
</resources>