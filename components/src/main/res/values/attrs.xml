    <declare-styleable name="AsociateBulletText">
        <attr name="bulletSize" format="dimension"/>
        <attr name="bulletColor" format="color"/>
        <attr name="bulletTextSize" format="dimension"/>
        <attr name="bulletTextColor" format="color"/>
        <attr name="bulletText" format="string"/>
    </declare-styleable>

</resources>